        </Grid.RowDefinitions>
        <StackPanel Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="0" RenderTransformOrigin="0.5,0.5" Margin="0,0,0,10">
            <Label Content="&#xD;&#xA; Nurse Dashboard"
               Height="204" Width="606" FontSize="65" FontWeight="Bold" FontFamily="Cooper Black" Foreground="#FF180C47" Background="#BBE1FA"/>
