<Window x:Class="E_Vita.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" WindowStyle="ThreeDBorderWindow"
        Title="MainWindow" WindowState="Maximized" d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/E-Vita-01.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="1320"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="355.013"/>
            <RowDefinition Height="519.02"/>
            <RowDefinition Height="190.007"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" 
                    Height="555" Width="1300">
            <!-- Username Label -->
            <Label FontSize="40" FontFamily="Montserrat" FontWeight="Bold"
                   HorizontalAlignment="Left" VerticalAlignment="Top" 
                   Background="Transparent" Margin="150,40,0,0">
                <Label.Content>Username:</Label.Content>
            </Label>

            <!-- Username TextBox -->
            <TextBox Name="user_txt" Height="40" Width="350" Background="White"
                     BorderBrush="Transparent" Margin="-150,-50,0,0"/>

            <!-- Password Label -->
            <Label FontSize="40" FontFamily="Montserrat" FontWeight="Bold"
                   HorizontalAlignment="Left" VerticalAlignment="Top" 
                   Background="Transparent" Margin="150,40,0,0">
                <Label.Content>Password:</Label.Content>
            </Label>

            <!-- Password TextBox -->
            <PasswordBox Name="pass_txt" Height="40" Width="350" Background="White"
                         BorderBrush="Transparent" Margin="-150,-40,0,0" />

            <!-- Login Button -->
            <Button Content="Login" Width="200" Height="60" FontSize="30" 
                    Background="#0F4C75" BorderThickness="1" Margin="-500,70,0,0" 
                    Click="Button_Click" Foreground="White">
            </Button>
            <!-- Reset_Password Button -->
            <Button Content="Reset Password" Width="250" Height="60" FontSize="30" 
                Background="#0F4C75" BorderThickness="1" Margin="500,-50,0,0" 
                Click="Button_Click" Foreground="White">
                </Button>
        </StackPanel>
    </Grid>
</Window>

