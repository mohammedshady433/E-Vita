<Window x:Class="E_Vita.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" WindowStyle="ThreeDBorderWindow"
        Title="Login" WindowState="Maximized" d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid Background="#00ADB5">
        <Grid.RowDefinitions>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="219*"/>
        </Grid.RowDefinitions>
        <Grid Grid.RowSpan="2">


            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="3" VerticalAlignment="Center" HorizontalAlignment="Center" >
                <!-- Username Label -->
                <Label FontSize="40" Content="Username:" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Transparent" Margin="0,20,0,0"/>
                <!-- Username TextBox -->
                <TextBox Name="user_txt" Height="20" Width="300" Background="#FFC3D3D4" BorderBrush="Transparent"/>
                <!-- Password Label -->
                <Label FontSize="40" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Transparent" Content="Password:" Margin="0,20,0,0"/>
                <!-- Password TextBox -->
                <PasswordBox Name="pass_txt" Height="20" Width="300" Background="#FFC3D3D4" BorderBrush="Transparent" />

                <!-- Login Button -->
                <Button Content="Login" Width="200" Height="60" FontSize="30" Background="#222831" BorderThickness="1" Click="Button_Click" Foreground="White" Margin="20"/>
                <!-- Reset_Password Button -->
                <Button Content="Reset Password" Width="250" Height="40" FontSize="30" Background="#222831" BorderThickness="1" Click="Reset_Pass" Foreground="White"/>
            </StackPanel>
            <StackPanel Grid.Row="0"  Grid.Column="2" Grid.ColumnSpan="2">
                <Image Source="E-Vita logo-01.png" Margin="0,-120,0,0"/>
            </StackPanel>
        </Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Visible" Grid.Column="0" Grid.RowSpan="2" />
    </Grid>
</Window>

