<Page x:Class="E_Vita.DoctorDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Doctor">

    <Grid>
        <!-- Column Definitions for Sidebar and Main Content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Background="#0F4C75" Margin="0,0,0,0" >
            <StackPanel Margin="10,20,10,20" HorizontalAlignment="Center">
                <Image Source="D:\NU\fifth semester\Clinical\E-Vita\E-Vita\Assets\E-Vita bright logo horizontal.png" Height="50" Margin="0,0,0,20"/>
            </StackPanel>
            <Button Content="View Patients Data" Click="ViewPatientsData_Click" FontFamily="Verdana" Padding="10"
                    Background="#3282B8" Foreground="#BBE1FA" BorderBrush="#BBE1FA" Width="166" Height="46" Margin="5,200,5,10"/>
            <Button Content="Prescriptions" Click="Prescriptions_Click" FontFamily="Verdana" Padding="10"
                    Background="#3282B8" Foreground="#BBE1FA" BorderBrush="#BBE1FA" Width="166" Height="46" Margin="5,5,5,10"/>
            <Button Content="Lab Tests Info." Click="LabResults_Click" FontFamily="Verdana" Padding="10"
                    Background="#3282B8" Foreground="#BBE1FA" BorderBrush="#BBE1FA" Width="166" Height="46" Margin="5,5,5,10"/>
            <Button Content="Images" Click="Images_Click" FontFamily="Verdana" Padding="10"
                    Background="#3282B8" Foreground="#BBE1FA" BorderBrush="#BBE1FA" Width="166" Height="46" Margin="5,5,5,10"/>
            <Button Content="Medications" Click="Medications_Click" FontFamily="Verdana" Padding="10"
                     Background="#3282B8" Foreground="#BBE1FA" BorderBrush="#BBE1FA" Width="166" Height="46" Margin="5,5,5,10"/>
            <Button Content="Finance" Click="Finance_Click" FontFamily="Verdana" Padding="10"
                    Background="#3282B8" Foreground="#BBE1FA" BorderBrush="#BBE1FA" Width="166" Height="46" Margin="5,5,5,10"/>

        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Column="1" Background="#1B262C" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Grid>
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#1B262C" Offset="0.0"/>
                        <GradientStop Color="#0F4C75" Offset="1.0"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <TextBlock Text="Doctor Dashboard" FontFamily="Arial Rounded MT Bold" FontSize="32" Foreground="#BBE1FA"
                           VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0"/>
            </Grid>

            <!-- Content Section -->
            <Grid Grid.Row="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Section (Calendar) -->
                <Border Grid.Column="0" Background="#BBE1FA" CornerRadius="10" BorderBrush="#0F4C75" BorderThickness="2" Margin="10">
                    <Grid>
                        <UniformGrid x:Name="CalendarGrid" Rows="7" Columns="7" Margin="10">
                            <!-- Days and buttons populated dynamically in code-behind -->
                        </UniformGrid>

                        <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                            <Button Content="◀" Width="30" Height="30" Background="#0F4C75" Foreground="#f5efe5"
                                    FontSize="16" FontWeight="Bold" BorderThickness="0"
                                    Click="PreviousMonth_Click" />
                            <ComboBox x:Name="YearSelector" Width="150" Height="30" SelectionChanged="YearSelector_SelectionChanged" Margin="10,0">
                                <!-- Populate years dynamically -->
                            </ComboBox>
                            <ComboBox x:Name="MonthSelector" Width="200" Height="30" SelectionChanged="MonthSelector_SelectionChanged" Margin="10,0">
                                <!-- Populate months dynamically -->
                            </ComboBox>
                            <Button Content="▶" Width="30" Height="30" Background="#0F4C75" Foreground="#f5efe5"
                                    FontSize="16" FontWeight="Bold" BorderThickness="0"
                                    Click="NextMonth_Click" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Right Section (Patients list and upcoming Appointments Details) -->
                <Grid Grid.Column="1" Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Recent and Upcoming Patients -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <StackPanel.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#1B262C" Offset="1"/>
                                <GradientStop Color="#0F4C75" Offset="0"/>
                            </LinearGradientBrush>
                        </StackPanel.Background>
                        <TextBlock Text="Recent and Upcoming Patients" FontSize="22" FontWeight="Bold" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" Foreground="White" Background="#1B262C" Width="958" Height="39"/>
                        <ListBox x:Name="PatientList" Height="400" Background="#FF0F4C75">
                            <ListBox Margin="0,0,0,0" Background="#FFBBE1FA">
                                <DataGrid x:Name="PatientDataGrid" AutoGenerateColumns="False" Height="205"  Width="697" Background="#FFBBE1FA" Foreground="#FF0F4C75" RowStyle="{DynamicResource DataGridRowStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" Style="{DynamicResource DataGridStyle1}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Time" Binding="{Binding TaskName}" Width="*"/>
                                        <DataGridCheckBoxColumn Header="Patient Name" Binding="{Binding IsCompleted}" Width="*"/>
                                        <DataGridCheckBoxColumn Header="Patient Phone" Binding="{Binding IsCompleted}" Width="*"/>
                                        <DataGridCheckBoxColumn Header="Patient ID" Binding="{Binding IsCompleted}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </ListBox>
                        </ListBox>
                    </StackPanel>


                    <!-- Upcoming Appointments -->
                    <StackPanel Grid.Row="1" Margin="0,10,0,0">

                        <TextBlock Text="Recent and Upcoming Appointments" FontSize="22" FontWeight="Bold" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" Foreground="White" Background="#1B262C" Width="958" Height="39"/>
                        <ListView Width="748" Height="294" >
                            <ListView.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#1B262C" Offset="1"/>
                                    <GradientStop Color="#0F4C75" Offset="0"/>
                                </LinearGradientBrush>
                            </ListView.Background>
                            <Border Background="#FFBBE1FA" CornerRadius="10" Margin="10,10,10,10" Padding="10" Height="205"  Width="697">
                                <StackPanel>
                                    <TextBlock Text="October 15, 2024" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    <TextBlock Text="10:00 AM" FontWeight="Bold" Foreground="DarkBlue" />
                                    <TextBlock Text="Patient: John Doe" Margin="0,5,0,0" Width="666"/>
                                    <TextBlock Text="Doctor: Dr. Mohammed" FontStyle="Italic"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Show Patient info" Width="759" Background="#1B262C"  Foreground="#FFBBE1FA" Height="47" Margin="0,50,0,50"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </ListView>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
