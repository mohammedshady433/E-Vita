<Page x:Class="E_Vita.DoctorDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Doctor">

    <Grid Background="#1B262C">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <!--header-->
        <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="6" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <StackPanel.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1B262C" Offset="0.0"/>
                    <GradientStop Color="#0F4C75" Offset="1.0"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <TextBlock Text="Doctor Dashboard" FontFamily="Arial Rounded MT Bold" FontSize="32" Foreground="#BBE1FA"
           VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,50,0,0" />
        </StackPanel>
        <!--sidepanel-->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="7" Background="#0F4C75">
            <!--logo-->
            <Image Source="D:\NU\fifth semester\Clinical\E-Vita\E-Vita\Assets\E-Vita bright logo horizontal.png" Height="50" Margin="0,15,0,20"/>

            <Button Content="View Patients Data" Click="ViewPatientsData_Click" FontFamily="Verdana" Padding="10"
                    Background="#3282B8" Foreground="#BBE1FA" BorderBrush="#BBE1FA" Width="166" Height="46" Margin="5,200,5,10"/>
            <Button Content="Prescriptions" Click="Prescriptions_Click" FontFamily="Verdana" Padding="10"
                    Background="#3282B8" Foreground="#BBE1FA" BorderBrush="#BBE1FA" Width="166" Height="46" Margin="5,5,5,10"/>
            <Button Content="Lab Tests Info." Click="LabResults_Click" FontFamily="Verdana" Padding="10"
                    Background="#3282B8" Foreground="#BBE1FA" BorderBrush="#BBE1FA" Width="166" Height="46" Margin="5,5,5,10"/>
            <Button Content="Images" Click="Images_Click" FontFamily="Verdana" Padding="10"
                    Background="#3282B8" Foreground="#BBE1FA" BorderBrush="#BBE1FA" Width="166" Height="46" Margin="5,5,5,10"/>
            <Button Content="Finance" Click="Finance_Click" FontFamily="Verdana" Padding="10"
                    Background="#3282B8" Foreground="#BBE1FA" BorderBrush="#BBE1FA" Width="166" Height="46" Margin="5,5,5,10"/>
        </StackPanel>
        <!--calender-->
        <StackPanel Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1" Grid.RowSpan="5" Background="#BBE1FA">
            <Border Background="#BBE1FA" CornerRadius="10" BorderBrush="#0F4C75" BorderThickness="2" Margin="10">
                <Grid>
                    <UniformGrid x:Name="CalendarGrid" Rows="7" Columns="7" Margin="10">
                        <!-- Days and buttons populated dynamically in code-behind -->
                    </UniformGrid>

                    <StackPanel Margin="10" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                        <Button Content="◀" Width="30" Height="30" Background="#0F4C75" Foreground="#f5efe5"
                        FontSize="16" FontWeight="Bold" BorderThickness="0"
                        Click="PreviousMonth_Click" />
                        <ComboBox x:Name="YearSelector" Width="150" Height="30" SelectionChanged="YearSelector_SelectionChanged" Margin="10,0">
                            <!-- Populate years dynamically -->
                        </ComboBox>
                        <ComboBox x:Name="MonthSelector" Width="200" Height="30" SelectionChanged="MonthSelector_SelectionChanged" Margin="10,0">
                            <!-- Populate months dynamically -->
                        </ComboBox>
                        <Button Content="▶" Width="30" Height="30" Background="#0F4C75" Foreground="#f5efe5"
                        FontSize="16" FontWeight="Bold" BorderThickness="0"
                        Click="NextMonth_Click" />
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
        <!--upcoming Appointments-->
        <StackPanel Grid.Column="4" Grid.ColumnSpan="3" Grid.Row="1" Grid.RowSpan="5" Margin="5">
            <TextBlock Text="Recent and Upcoming Appointments" FontSize="22" FontWeight="Bold" Margin="0,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" Foreground="White" Background="#1B262C" Width="958" Height="39"/>
            <ListView x:Name="listviewdoc" Width="670" Height="560" d:ItemsSource="{d:SampleData ItemCount=3}">
                <ListView.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#1B262C" Offset="1"/>
                        <GradientStop Color="#0F4C75" Offset="0"/>
                    </LinearGradientBrush>
                </ListView.Background>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#FFBBE1FA" CornerRadius="10" Margin="10" Padding="10" Height="150" Width="610">
                            <StackPanel>
                                <TextBlock Text="{Binding Patient_appointment.name}" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Time}" FontWeight="Bold" Foreground="DarkBlue"/>
                                <TextBlock Text="{Binding Patient_appointment.contact}" Margin="0,5,0,0" Width="666"/>
                                <TextBlock Text="{Binding Patient_appointment.Patient_ID}" FontStyle="Italic"/>
                                <Button x:Name="Patient_treatment_and_assessment" Content="Patient treatment and assessment" Width="500" Background="#1B262C" Foreground="#FFBBE1FA" Height="47" Margin="0,10,0,50" Click="patient_treat_assess_click" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
