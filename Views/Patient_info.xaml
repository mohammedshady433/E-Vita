<Page x:Class="E_Vita.Views.Patient_info"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:E_Vita.Views"
      mc:Ignorable="d" 
      Title="Patient_info"          Background="#1B262C"
    d:DesignHeight="2500" d:DesignWidth="1532">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <!-- Main Background -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#991130" Offset="0"/>
                    <GradientStop Color="#991130" Offset="0.5"/>
                    <GradientStop Color="#991130" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="150" />
                <RowDefinition Height="50" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <!-- logo -->
            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="250" VerticalAlignment="Top" Width="250" Margin="10,0,0,0"  Panel.ZIndex="1">
                <Image Source="D:\NU\fifth semester\Clinical\E-Vita\Assets\E-Vita logo-01.png" HorizontalAlignment="Left" Height="150" Margin="0" Width="250"/>
            </StackPanel>

            <!-- HEAD-->
            <StackPanel Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="Patient Info" Height="140" Width="700" FontSize="70" FontWeight="Bold" FontFamily="Qatar2022 Arabic" Foreground="#e1b184" Background="Transparent" Margin="5,50,33,0" />
            </StackPanel>
            <StackPanel Grid.Column="0" Grid.ColumnSpan="6" Grid.Row="2" Margin="10">
                <TextBlock Text="Patient Information" FontFamily="Qatar2022 Arabic" FontSize="22" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center" Foreground="#e1b184"/>
                <Grid>
                    <Grid.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#e1b184" Offset="1"/>
                            <GradientStop Color="#e1b184" Offset="0"/>
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Patient Details -->
                    <TextBlock Text="Patient Name:" Foreground="#991130" FontFamily="Qatar2022 Arabic" FontSize="18" Grid.Row="0" Grid.Column="0" Margin="5"/>
                    <TextBox x:Name="NameTextBlock" Grid.Row="0" Grid.Column="1" Width="400" Margin="5" Background="#FFECECE4" IsReadOnly="True"/>
                    <TextBlock Text="Patient ID:" Foreground="#991130" FontFamily="Qatar2022 Arabic" FontSize="18" Grid.Row="0" Grid.Column="2" Margin="5"/>
                    <TextBox x:Name="IdTextBlock" Grid.Row="0" Grid.Column="3" Width="400" Margin="5" Background="#FFECECE4" IsReadOnly="True"/>

                    <TextBlock Text="Nationality:" Foreground="#991130" FontFamily="Qatar2022 Arabic" FontSize="18" Grid.Row="1" Grid.Column="0" Margin="5"/>
                    <TextBox x:Name="NationalityTextBlock" Grid.Row="1" Grid.Column="1" Width="400" Margin="5" Background="#FFECECE4" IsReadOnly="True"/>
                    <TextBlock Text="Reason for Visit:" Foreground="#991130" FontFamily="Qatar2022 Arabic" FontSize="18" Grid.Row="1" Grid.Column="2" Margin="5"/>
                    <TextBox x:Name="ReasonForVisitTextBox" Grid.Row="1" Grid.Column="3" Width="400" Margin="5" Background="#FFECECE4"/>

                    <TextBlock Text="Age:" Foreground="#991130" FontFamily="Qatar2022 Arabic" FontSize="18" Grid.Row="2" Grid.Column="2" Margin="5"/>
                    <TextBlock Text="Gendre:" Foreground="#991130" FontFamily="Qatar2022 Arabic" FontSize="18" Grid.Row="2" Grid.Column="0" Margin="5"/>
                    <TextBox TextAlignment="Center" x:Name="DOBTextBlock" Grid.Row="2" Grid.Column="3" Width="200"  Margin="5" Background="#FFECECE4" IsReadOnly="True" HorizontalAlignment="Center"/>
                    <TextBlock Text="Age:" Foreground="#991130" FontFamily="Qatar2022 Arabic" FontSize="18" Grid.Row="2" Grid.Column="2" Margin="5"/>
                    <TextBox TextAlignment="Center" x:Name="Gender_Box" Grid.Row="2" Grid.Column="1" Width="200"  Margin="5" Background="#FFECECE4" IsReadOnly="True" HorizontalAlignment="Center"/>

                    <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="6" Orientation="Vertical" Margin="10">
                        <!-- Subjective Section -->
                        <TextBlock Text="C/O (S):" FontFamily="Qatar2022 Arabic" FontSize="16" FontWeight="Bold" Margin="5" Foreground="#991130"/>
                        <TextBox x:Name="COSText" Width="Auto" Height="50" Margin="5" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Background="#FFECECE4"/>

                        <!-- Objective Section -->
                        <TextBlock Text="General examination (O):" FontFamily="Qatar2022 Arabic" FontSize="16" FontWeight="Bold" Margin="5" Foreground="#991130"/>
                        <TextBox x:Name="General_examinationText" Width="Auto" Height="50" Margin="5" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Background="#FFECECE4"/>

                        <!-- Assessment Section -->
                        <TextBlock Text="Local examination (A):" FontFamily="Qatar2022 Arabic" FontSize="16" FontWeight="Bold" Margin="5" Foreground="#991130"/>
                        <TextBox x:Name="Local_examinationText" Width="Auto" Height="50" Margin="5" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Background="#FFECECE4"/>

                        <!-- Plan Section -->
                        <TextBlock Text="Future plan (P):" FontFamily="Qatar2022 Arabic" FontSize="16" FontWeight="Bold" Margin="5" Foreground="#991130"/>
                        <TextBox x:Name="Future_planText" Width="Auto" Height="50" Margin="5" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Background="#FFECECE4"/>

                        <StackPanel>
                            <CheckBox x:Name="ShowSurgeriesCheckBox" FontFamily="Qatar2022 Arabic" FontSize="16" Content="New Surgery Needed" Foreground="#991130" Margin="5" Checked="ShowSurgeriesCheckBox_Checked" Unchecked="ShowSurgeriesCheckBox_Unchecked" Background="#FFECECE4" BorderBrush="#FF1B272F"/>
                            <StackPanel x:Name="SurgeriesPanel" Visibility="Collapsed">
                                <!--surgeries-->
                                <TextBlock Text="Surgery:" Foreground="#FFECECE4" FontFamily="Qatar2022 Arabic" FontSize="18" Grid.Row="4" Grid.Column="0" Margin="5"/>
                                <TextBox x:Name="SurgeriesText" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Width="900" Height="80" AcceptsReturn="True" Margin="5" Background="#FFECECE4"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="Family History:" Foreground="#991130" FontFamily="Qatar2022 Arabic" FontSize="18" Grid.Row="5" Grid.Column="0" Margin="5"/>
                    <TextBox x:Name="Family_HistoryText" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" Width="900" Height="80" AcceptsReturn="True" Margin="5" Background="#FFECECE4"/>

                    <TextBlock Text="Past History:" Foreground="#991130" FontFamily="Qatar2022 Arabic" FontSize="18" Grid.Row="4" Grid.Column="0" Margin="5"/>
                    <DataGrid Name="PatientHistoryDataGrid" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" AutoGenerateColumns="False" Height="200" Width="1280" VerticalScrollBarVisibility="Auto" Margin="5" Background="#FFECECE4" RowStyle="{DynamicResource DataGridRowStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" CellStyle="{DynamicResource DataGridCellStyle1}" Style="{DynamicResource DataGridStyle1}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Reason of visit" Binding="{Binding reason_for_visit}" Width="*"/>
                            <DataGridTextColumn Header="Last Plans" Binding="{Binding Future_Plan}" Width="*"/>
                            <DataGridTextColumn Header="Surgery" Binding="{Binding Surgery}" Width="*"/>
                            <DataGridTextColumn Header="Medication" Binding="{Binding Medication}" Width="*"/>
                            <DataGridTextColumn Header="Medical Diseases" Binding="{Binding Disease}" Width="*"/>
                            <DataGridTextColumn Header="Family History" Binding="{Binding Family_History}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </StackPanel>
            <!--medications-->
            <StackPanel Grid.Column="0" Grid.ColumnSpan="6" Grid.Row="3" Margin="10" Orientation="Vertical">
                <StackPanel.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#e1b184" Offset="1"/>
                        <GradientStop Color="#e1b184" Offset="0"/>
                    </LinearGradientBrush>
                </StackPanel.Background>

                <TextBlock Text="Medications" FontFamily="Qatar2022 Arabic" FontSize="22" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center" Foreground="#991130"/>
                <!-- StackPanel to hold medication textboxes -->
                <StackPanel Name="MedicationStackPanel" Background="Transparent" Margin="10" Orientation="Vertical">
                    <!-- Medication Entry Template -->
                    <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">

                        <Button Content="+" Width="40" Height="40" Background="white" Foreground="#1B262C" FontFamily="Qatar2022 Arabic" FontSize="24" FontWeight="Bold" Margin="5,0,0,0" Click="AddMedicationButton_Click" HorizontalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <!-- Lab Test Section -->
            <StackPanel Grid.Column="0" Grid.ColumnSpan="6" Grid.Row="4" Margin="10">
                <TextBlock Text="Lab Test Information" FontFamily="Qatar2022 Arabic" FontSize="22" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center" Foreground="#991130"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- Radiology Section -->
                    <StackPanel Orientation="Vertical" Width="300">
                        <StackPanel.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#e1b184" Offset="1"/>
                                <GradientStop Color="#e1b184" Offset="0"/>
                            </LinearGradientBrush>
                        </StackPanel.Background>
                        <TextBlock Text="Radiology Tests" Foreground="#991130" FontFamily="Qatar2022 Arabic" FontSize="16" Margin="0,0,0,5" FontWeight="Bold"/>
                        <CheckBox x:Name="X_Ray_checkBox" Content="X-Ray" Foreground="black" Margin="3"/>
                        <CheckBox x:Name="US_checkBox" Content="U/S" Foreground="black" Margin="3"/>
                        <CheckBox x:Name="CT_checkBox" Content="CT" Foreground="black" Margin="3"/>
                        <CheckBox x:Name="MRI_checkBox" Content="MRI" Foreground="black" Margin="3"/>
                        <CheckBox x:Name="other_checkBox" Content="Others" Foreground="black" Margin="3"/>
                        <TextBox Name="RadiologyTextBox" Width="250" Height="50" Margin="5" Foreground="#1B262C" BorderBrush="#BBDEFB" Background="#FFECECE4"/>
                        <Button Content="Upload Image" 
                        Grid.Row="1" Grid.Column="1" 
                        Margin="10" Width="150" Height="40" 
                        Click="UploadImageButton_Click" Background="white" />
                        <Button Content="Upload PDF" 
                        Grid.Row="1" Grid.Column="1" 
                        Margin="10" Width="150" Height="40" 
                        Click="UploadPDFButton_Click" Background="white" />
                        
                    </StackPanel>

                    <!-- Blood Test Section -->
                    <StackPanel Width="340" Grid.Row="4" >
                        <StackPanel.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#e1b184" Offset="1"/>
                                <GradientStop Color="#e1b184" Offset="0"/>
                            </LinearGradientBrush>
                        </StackPanel.Background>
                        <TextBlock Text="Blood Tests" Foreground="#991130" FontFamily="Qatar2022 Arabic" FontSize="16" Margin="0,0,0,5" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal">
                            <!-- First Column of Blood Tests -->
                            <StackPanel Width="159" Margin="5">
                                <CheckBox x:Name="CBC_checkBox" Content="CBC" Foreground="black" Margin="3"/>
                                <CheckBox x:Name="Proth_checkBox" Content="Proth-Time and Content" Foreground="black" Margin="3"/>
                                <CheckBox x:Name="Urea_checkBox" Content="Blood Urea and Creatine" Foreground="black" Margin="3"/>
                                <CheckBox x:Name="SGOT_checkBox" Content="SGPT and SGOT" Foreground="black" Margin="3"/>
                            </StackPanel>
                            <!-- Second Column of Blood Tests -->
                            <StackPanel Width="140" Margin="5">
                                <CheckBox x:Name="Hep_checkBox" Content="Hepatitis B, C" Foreground="black" Margin="3"/>
                                <CheckBox x:Name="Fasting_checkBox" Content="Fasting and PP Blood Sugar" Foreground="black" Margin="3"/>
                                <CheckBox x:Name="Glyco_checkBox" Content="Glycodytit Hb" Foreground="black" Margin="3"/>
                                <CheckBox x:Name="Other_Bloodtests_checkBox" Content="Others" Foreground="black" Margin="3"/>
                            </StackPanel>
                        </StackPanel>
                        <TextBox Name="BloodTestTextBox" Width="250" Height="50" Margin="12" Foreground="#1B262C" BorderBrush="#BBDEFB" Background="#FFECECE4"/>
                        <Button Content="Upload Image" 
                        Grid.Row="1" Grid.Column="1" 
                        Margin="10" Width="150" Height="40" 
                        Click="UploadImageButton_Click" Background="white" />
                        
                        <Button Content="Upload PDF" 
                        Grid.Row="1" Grid.Column="1" 
                        Margin="10" Width="150" Height="40" 
                        Click="UploadPDFButton_Click" Background="white" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="2" Grid.Row="5" Grid.RowSpan="1"  VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button x:Name="SaveBtn" Click="SaveButton_Click" Width="200" Height="40" Margin="90,20,0,0"  Background="#222831" BorderThickness="1" Foreground="White" Content="Save" FontFamily="Qatar2022 Arabic" FontSize="30" FontWeight="Bold" />
                <Button x:Name="SaveandPrintBtn" Click="SaveandPrintBtn_Click"  Width="300" Height="40" Margin="90,30,0,0"  Background="#222831" BorderThickness="1" Foreground="White" Content="Save and print" FontFamily="Qatar2022 Arabic" FontSize="30" FontWeight="Bold" />

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>